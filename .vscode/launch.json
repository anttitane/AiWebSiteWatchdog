{
  "$schema": "https://json.schemastore.org/launch.json",
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET API (5050)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/AiWebSiteWatchDog.API/bin/Debug/net9.0/AiWebSiteWatchDog.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/AiWebSiteWatchDog.API",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5050"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://localhost:5050)"
      }
    },
    {
      "name": "Vite dev server",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/AiWebSiteWatchDog.API/ClientApp",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {},
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run API + Frontend (Vite)",
      "configurations": [
        ".NET API (5050)",
        "Vite dev server"
      ]
    }
  ]
}
